{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "lib": [
      "dom",
      "es7"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types/",
      "src/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@client-actions/*": ["client/actions/*"],
      "@client-routes/*": ["client/routes/*"],
      "@client-store/*": ["client/store/*"],
      "@client-layouts/*": ["client/components/layouts/*"],
      "@client-ui/*": ["client/components/ui/*"],
      "@client-minton/*": ["client/assets/minton/*"],
      "@client-sass/*": ["client/sass/*"],
      "@client-img/*": ["client/assets/img/*"],
      "@client-types/*": ["client/types/*"],
      "@client-services/*": ["client/services/*"],
      "@server-libs/*": ["server/libs/*"],
      "@server-models/*": ["server/models/*"],
      "@server-ws/*": ["server/ws/*"],
      "@server-types/*": ["server/types/*"],
      "@server-services/*": ["server/services/*"],
      "@server-email-templates/*": ["server/email-templates/*"]
    }
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/hepsi/*"
  ]
}
